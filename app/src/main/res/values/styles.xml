<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 底层布局统一内边距 -->
    <style name="RootLayout">
        <item name="android:paddingLeft">15px</item>
        <item name="android:paddingRight">15px</item>
    </style>

    <!-- 登录页面底层布局 -->
    <style name="LoginActivityRootLayout" parent="RootLayout">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- 主页面底层布局 -->
    <style name="MainActivityRootLayout" parent="RootLayout">
        <item name="android:gravity">left|top</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- 答题界面底层布局 -->
    <style name="QuestionActivityRootLayout" parent="RootLayout">
        <item name="android:background">@color/white</item>
    </style>

    <!-- 答题页面底部状态栏布局 -->
    <style name="QuestionActivityBottomLayout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 答题页面选项布局 -->
    <style name="QuestionActivitySelectionLayout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <!-- 主页面标题布局 -->
    <style name="MainActivityTitleLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <!-- 登录页面输入框 -->
    <style name="LoginActivityEditText" parent="RegularFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30pt</item>
        <item name="android:paddingLeft">15px</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edit_text_stroke</item>
    </style>

    <!-- 登录页面按钮样式 -->
    <style name="LoginActivityButton" parent="RegularFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/blue_round_corner</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 字体 -->
    <style name="TitleFont">
        <item name="android:textSize">13pt</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LargeFont">
        <item name="android:textSize">11pt</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RegularFont">
        <item name="android:textSize">9pt</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SmallFont">
        <item name="android:textSize">7pt</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 图片样式 -->
    <style name="IconImage">
        <item name="android:layout_width">16pt</item>
        <item name="android:layout_height">16pt</item>
    </style>

    <!-- 图片按钮组合样式 -->
    <style name="IconButtonLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

</resources>
